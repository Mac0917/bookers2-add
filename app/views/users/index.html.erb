<div class="container">
	<div class="row">
		<div class="col-xs-3">

            <h1>User info</h1>
			<%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
			<table class="table">
			  <tr>
				<th>name</th><th><%= @user.name %></th>
			  </tr>
			  <tr>
				<th>introduction</th><th><%= @user.introduction %></th>
			  </tr>
			</table>
			<%= link_to edit_user_path(@user), class: 'btn btn-default edit_i' do %>
			  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<%end%>

			<h1>New book</h1>
			<%= form_for @book do |f| %>
              <div class="form_book">
			    <%= f.label :Name %><br>
			    <%= f.text_field :title, size:"40:20" %>
			  </div>
              <div class="form_book">
			    <%= f.label :Option %><br>
			    <%= f.text_area :body, size:"40:20" %>
			  </div>
              <div class="form_book">
			    <%= f.submit "Create Book", class: "btn btn-primary" %>
			  </div>
            <% end %>

		</div>

		<div class="col-xs-9">

			<h1>Users</h1>
			<table class="table">
				<thead>
				  <tr>
					<th>image</th><th>name</th>
				  </tr>
			    </thead>
			    <tbody>
				  <% @users.each do |user| %>
			        <tr>
					  <td><%= attachment_image_tag user, :profile_image, size: "30x30", fallback: "no_image.jpg" %></td>
					  <td><%= user.name %></td>
					  <td><%= link_to "Show", user_path(user.id) %></td>
				    </tr>
				  <%end%>
			    </tbody>
			</table>

		</div>
	</div>
</div>


