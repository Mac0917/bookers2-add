<div class="container">
	<div class="row">
	    <div class="col-xs-3">
	  
            <h1>User info</h1>
			<%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg" %>
			<table class="table">
			  <tr>
			    <th>name</th><th><%= @user.name %></th>
			  </tr>
			  <tr>
			    <th>introduction</th><th><%= @user.introduction %></th>
			  </tr>
			</table>
			<% if @user.id == current_user.id %>
			  <%= link_to edit_user_path(current_user.id), class: 'btn btn-default edit_i' do%>
			    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			  <%end%>
			<%else%>
			  <%= link_to user_path(current_user.id), class: 'btn btn-default edit_i' do%>
			    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			  <%end%>
			<%end%>


            <h1>New book</h1>
			<%= form_for @book do |f| %>
              <div class="form_book">
			    <%= f.label :Name %><br>
			    <%= f.text_field :title, size:"40:20" %>
			  </div>
              <div class="form_book">
			    <%= f.label :Option %><br>
			    <%= f.text_area :body, size:"39:20" %>
			  </div>
              <div class="form_book">
			    <%= f.submit "Create Book", class: "btn btn-primary" %>
			  </div>
            <% end %>

		</div>

        <div class="col-xs-9">

			<h1>Book detail</h1>
			   <table class="table">
			    <tr>
					<td>
						<%= link_to user_path(@books.user.id) do %>
						　　<%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
						   <p class="name"><%= @user.name %></p>
						<%end%>
			    	<td>

					<td>
					　　<%= @books.title %>
					<td>
					<td>
					　　<%= @books.body %>
					<td>
			        <% if @user.id == current_user.id %>
						<td>
						　　<%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-success Edit_btn" %>
						</td>
						<td>
						　　<%= link_to "Destroy", book_path(@books.id), class: "btn btn-danger Destroy_btn", method: :delete, data: { confirm: 'Are you sure?' } %>
						</td>
					<%end%>
					<td>
					<%if @books.favorited_by?(current_user)%>
						<td>
							<%= link_to book_favorites_path(@books.id), method: :delete do %>
											<i class="glyphicon glyphicon-heart"></i></i>
											<%= @books.favorites.count %> いいね
							<%end%>
						</td>
					<%else%>
						<td>   
							<%= link_to book_favorites_path(@books.id), method: :post do %>
								<i class="glyphicon glyphicon-heart-empty"></i>
								<%= @books.favorites.count %> いいね
							<%end%>
						</td>
					<%end%>
			    <tr>
			  </table>
			  
			  <div class="comment">
				<h2 class="comment-count"><%= @books.comments.count %>件コメント</h2>
				<%if flash[:danger]%>
					<div class="alert alert-danger">
					<%= flash[:danger] %>
					</div>
				<%end%>
						<div>
						  <table class="table">
						   <thead>
						   </thead>
						   <tbody>
						    <% @books.comments.each do |comment| %>
							<tr>
							  <td>
								<%= attachment_image_tag comment.user, :profile_image, size: "40x40", fallback: "no_image.jpg", class:"img-circle " %>
								<p><%= comment.user.name %></p>
							  </td>
							  <td>
							    <%= comment.created_at.strftime('%Y/%m/%d') %>
							  </td>
							  <td>
							    <%= comment.comment %>
							  </td>
							  <%if comment.user.id == current_user.id%>
						        <td>
								  <%= link_to "Destroy", comment_destroy_path(comment.book.id, comment.id), class: "btn btn-danger Destroy_btn", method: :delete, data: { confirm: 'Are you sure?' } %>
								</td> 
							  <%end%>
							</tr>
							<%end%>
						   </tbody>
						  </table>
						</div>
				<%= form_for [@books, @comment] do |f| %>
					<%= f.text_field :comment, class: "form-control",placeholder: "コメントをここに" %>
					<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
				<%end%>
	
			  </div>

		</div>
	</div>
</div>
